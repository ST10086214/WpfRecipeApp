<Window x:Class="WpfRecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe App" Height="2112" Width="1312">
    <Grid>
        <StackPanel>
            <Button Content="Add Recipe" Click="AddRecipeButton_Click" Margin="10"/>
            <TextBox Name="FilterTextBox" Margin="10" VerticalAlignment="Center"/>
            <Button Content="Filter" Click="FilterButton_Click" Margin="10"/>
            <ListBox Name="RecipesListBox" DisplayMemberPath="Name" SelectionChanged="RecipesListBox_SelectionChanged" Margin="10"/>
            <TextBlock Name="RecipeDetailsTextBlock" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
